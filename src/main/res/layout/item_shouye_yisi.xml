        android:layout_height="wrap_content"
        android:id="@+id/iv_item_shouye_yisi"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/iv_item_shouye_yisi"
        android:id="@+id/tv_item_shouye_yisiname"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/tv_item_shouye_yisiname"
        android:id="@+id/tv_item_shouye_yisiprice"/>


</RelativeLayout>
